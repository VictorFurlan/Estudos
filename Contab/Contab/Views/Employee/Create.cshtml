@model Contab.Models.MyViewModel

@section Scripts {
    <!-- jQuery -->
    <script src="/Scripts/vendor/jquery/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="/Scripts/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="/Scripts/vendor/metisMenu/metisMenu.min.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="/Scripts/dist/js/sb-admin-2.js"></script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin 2 - Bootstrap Admin Theme</title>
    <!-- Bootstrap Core CSS -->
    <link href="/Scripts/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- MetisMenu CSS -->
    <link href="/Scripts/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/Scripts/dist/css/sb-admin-2.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="/Scripts/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h2>Adicionar Funcionário</h2>

                        <h4>Funcionário</h4>
                        <hr />
                        <div class="row">
                            <div class="col-lg-6">
                                <form asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        @Html.DisplayNameFor(model => model.employee.Name)
                                        @Html.TextBoxFor(m => m.employee.Name)
                                    </div>
                                    <div class="form-group">
                                        @Html.DropDownListFor(m => m.gender.GenderId, new SelectList(Model.gender.Genderoptions, "GenderId", "GenderName", Model.gender.Genderoptions.First().GenderId))
                                    </div>
                                    <div class="form-group">
                                        @Html.DisplayNameFor(model => model.employee.Phone)
                                        @Html.TextBoxFor(m => m.employee.Phone)
                                    </div>
                                    <div class="form-group">
                                        @Html.DisplayNameFor(model => model.employee.Email)
                                        @Html.TextBoxFor(m => m.employee.Email)
                                    </div>
                                    <div class="form-group">
                                            @Html.AntiForgeryToken()
                                        <div>
                                            @Html.DisplayNameFor(model => model.employee.DepartName)
                                            @*Passando o Nome da ViewBag*@
                                            @Html.DropDownList("Depart", "Selecione")
                                        </div>
                                    </div>
                                    <div class="form-group">
                                            @Html.AntiForgeryToken()
                                        <div>
                                            @Html.DisplayNameFor(model => model.employee.ProfName)
                                            @*Passando o Nome da ViewBag*@
                                            @Html.DropDownList("Prof", "Selecione")
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.DisplayNameFor(model => model.employee.Salary)
                                        @Html.TextBoxFor(m => m.employee.Salary)
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-default"/>
                                    </div>
                                </form>
                            </div>
                            <form class="form-inline">
                                <div class="col-lg-6" style="width:600px; margin-top:323px">
                                    <div class="col">
                                        @Html.DisplayNameFor(model => model.employee.DepartName)
                                        @Html.TextBoxFor(m => m.employee.DepartName)
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary mb-2">Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <br>
                            <form class="form-inline">
                                <div class="col-lg-6" style="width:600px; margin-top:36px">
                                    <div class="col">
                                        @Html.DisplayNameFor(model => model.employee.ProfName)
                                        @Html.TextBoxFor(m => m.employee.ProfName)
                                        <button type="submit" class="btn btn-primary mb-2">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div>
                            <a asp-action="Index">Voltar para Funcionários</a>
                        </div>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
</body>
</html>